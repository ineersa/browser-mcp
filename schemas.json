{
    "tools": [
        {
            "name": "search",
            "title": "Search for information",
            "description": "Searches for information related to `query` and displays `topn` results.",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "query": {
                        "title": "Query",
                        "type": "string"
                    },
                    "topn": {
                        "default": 10,
                        "title": "Topn",
                        "type": "integer"
                    },
                    "source": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "default": null,
                        "title": "Source"
                    }
                },
                "required": [
                    "query"
                ],
                "title": "searchArguments"
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "result": {
                        "title": "Result",
                        "type": "string"
                    }
                },
                "required": [
                    "result"
                ],
                "title": "searchOutput"
            }
        },
        {
            "name": "open",
            "title": "Open a link or page",
            "description": "Opens the link `id` from the page indicated by `cursor` starting at line number `loc`, showing `num_lines` lines.\nValid link ids are displayed with the formatting: `【{id}†.*】`.\nIf `cursor` is not provided, the most recent page is implied.\nIf `id` is a string, it is treated as a fully qualified URL associated with `source`.\nIf `loc` is not provided, the viewport will be positioned at the beginning of the document or centered on the most relevant passage, if available.\nUse this function without `id` to scroll to a new location of an opened page.",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "id": {
                        "anyOf": [
                            {
                                "type": "integer"
                            },
                            {
                                "type": "string"
                            }
                        ],
                        "default": -1,
                        "title": "Id"
                    },
                    "cursor": {
                        "default": -1,
                        "title": "Cursor",
                        "type": "integer"
                    },
                    "loc": {
                        "default": -1,
                        "title": "Loc",
                        "type": "integer"
                    },
                    "num_lines": {
                        "default": -1,
                        "title": "Num Lines",
                        "type": "integer"
                    },
                    "view_source": {
                        "default": false,
                        "title": "View Source",
                        "type": "boolean"
                    },
                    "source": {
                        "anyOf": [
                            {
                                "type": "string"
                            },
                            {
                                "type": "null"
                            }
                        ],
                        "default": null,
                        "title": "Source"
                    }
                },
                "title": "open_linkArguments"
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "result": {
                        "title": "Result",
                        "type": "string"
                    }
                },
                "required": [
                    "result"
                ],
                "title": "open_linkOutput"
            }
        },
        {
            "name": "find",
            "title": "Find pattern in page",
            "description": "Finds exact matches of `pattern` in the current page, or the page given by `cursor`. Provide `regex` to run a regex match instead.",
            "inputSchema": {
                "type": "object",
                "properties": {
                    "pattern": {
                        "title": "Pattern",
                        "type": "string"
                    },
                    "regex": {
                        "title": "Regex",
                        "type": "string"
                    },
                    "cursor": {
                        "default": -1,
                        "title": "Cursor",
                        "type": "integer"
                    }
                },
                "oneOf": [
                    {
                        "required": [
                            "pattern"
                        ]
                    },
                    {
                        "required": [
                            "regex"
                        ]
                    }
                ],
                "title": "findArguments"
            },
            "outputSchema": {
                "type": "object",
                "properties": {
                    "result": {
                        "title": "Result",
                        "type": "string"
                    }
                },
                "required": [
                    "result"
                ],
                "title": "find_patternOutput"
            }
        }
    ]
}
